{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des produits</h1>

    <div class="d-flex justify-content-center p-3">
        <a class="text-center btn btn-primary" href="{{ path('app_dashboard_product_new') }}">Ajouter un produit</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Catégories</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }} €</td>
                <td>
                    {% for category in product.category %}
                        {{ category }}<br>
                    {% endfor %}
                </td>
                <td>{{ product.description }}</td>
                <td>
                    <img src="{{ product.image }}" class="image-preview" alt="">
                </td>
                <td>
                    <a href="{{ path('app_dashboard_product_show', {'id': product.id}) }}">Voir</a>
                    <a href="{{ path('app_dashboard_product_edit', {'id': product.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun produit trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
