{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="text-center">Créer mon compte</h1>

<div class="container d-flex justify-content-center align-items-center text-center">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, { label: 'Nom d\'utilisateur', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.email, { label: 'Email', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe',  'attr': {'class': 'form-control'}}) }}
        {# {{ form_row(registrationForm.agreeTerms) }} #}

        <button type="submit" class="btn btn-lg btn-primary mt-2">Créer mon compte</button>
    {{ form_end(registrationForm) }}
</div>

{% endblock %}
